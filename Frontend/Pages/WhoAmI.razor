<h2>Karriereforløb</h2>
@if (Jobs == null) {
        <p><em>Loading...</em></p>
    } else {
        <table class="table">
            <thead>
                <tr>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Jobs.Count(); i++) {
                    @if (i % 2 == 1) {
                        <tr>
                            <td><b>@Jobs[i].CompanyName - @Jobs[i].StartDate.ToShortDateString() - @Jobs[i].EndDate.ToShortDateString()</b></td>
                            @foreach (var item in Jobs[i].WorkExperiences) {
                                <td><p><u> @item.Titel - From: @item.FromDate.ToShortDateString() to: @item.EndDate.ToShortDateString()</u><br />
                                @item.Description
                            </p></td>
                            }
                        </tr>
                    } else {
                        <tr>
                            @foreach (var item in Jobs[i].WorkExperiences) {
                                <td><p><u> @item.Titel - From: @item.FromDate.ToShortDateString() to: @item.EndDate.ToShortDateString()</u><br />
                                @item.Description
                            </p></td>
                            }
                            <td><b>@Jobs[i].CompanyName - @Jobs[i].StartDate.ToShortDateString() - @Jobs[i].EndDate.ToShortDateString()</b></td>
                        </tr>
                        }
                    }
            </tbody>
            <tfoot>
                <tr>
                    <td>bottom left</td>
                    <td>Bottom right</td>
                </tr>
            </tfoot>
        </table>
    }


