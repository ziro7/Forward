@inherits AddJobDialogBase


@if (ShowDialog) {
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add a new job</h5>
                    <button type="button" class="close" data-dismiss="modal" @onclick="Close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <EditForm Model="@NewJob" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <p>
                            <label>Company Name:</label>
                            <InputText @bind-Value="@NewJob.CompanyName" />
                            <ValidationMessage For="@(() => NewJob.CompanyName)" />
                        </p>
                        <p>
                            <label>From Date:</label>
                            <InputDate @bind-Value="@NewJob.StartDate" />
                            <ValidationMessage For="@(() => NewJob.StartDate)" />
                        </p>
                        <p>
                            <label>End Date:</label>
                            <InputDate @bind-Value="@NewJob.EndDate" />
                            <ValidationMessage For="@(() => NewJob.EndDate)" />
                        </p>

                        @if (Message != string.Empty && IsSaved == false) {
                            <div class="alert @StatusClass">@Message</div>
                        }
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="Close">Close</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
